@model IEnumerable<Favorite>


<table class="table">
    <tr>
        <th>Name</th>
        <th>Rank</th>
        <th>Comments</th>
        <th></th>


    </tr>
    @foreach (var fav in Model)
    {
        <tr>
            <td>@fav.StartupName</td>
            <td>@fav.Rank</td>
            <td>@fav.PrivateComments</td>
            <td>
                <a href="/Investment/RemoveFavorite?id=@fav.Id" class="btn-danger">Remove Favorite</a>
            </td>
            <td>
                <a href="/Investment/AddComment?id=@fav.Id" class="btn-dark">Add Comment</a>
            </td>
        </tr>
    }
</table>
