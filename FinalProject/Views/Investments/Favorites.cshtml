@model IEnumerable<Favorite>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Rank</th>
        <th>Comments</th>
        <th></th>


    </tr>
    @foreach (var fav in Model)
    {
        <tr>
            <td>@fav.StartupName</td>
            <td>@fav.Rank</td>
            <td>@fav.PrivateComments</td>
            <td>
                <a href="/Investments/RemoveFavorite?id=@fav.Id" class="btn-danger">Remove Favorite</a>
            </td>
            <td>
                <form action="/Investments/AddComment" method="post">
                    <input type="hidden" name="Id" value="@fav.Id"/>
                    <input type="text" name="comment" />
                    <input type="submit" />
                </form>
            </td>
            <td>
                <a href="/Investments/RemoveComment?id=@fav.Id" class="btn-danger">Remove Comment</a>
            </td>
        </tr>
    }
</table>
<form>
    <input type="button" value="back to results" onclick="window.location = document.referrer">
</form>
